{
  "name": "ecocred-backend",
  "version": "1.0.0",
  "description": "Backend API for EcoCred carbon credit platform",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "prisma generate --schema=src/database/schema.prisma && tsc",
    "postinstall": "prisma generate --schema=src/database/schema.prisma",
    "start": "node dist/server.js",
    "deploy:hardhat": "hardhat ignition deploy ignition/modules/EcoSystemV2.ts --network hardhatMainnet",
    "deploy:sepolia": "hardhat ignition deploy ignition/modules/EcoSystemV2.ts --network sepolia",
    "node": "hardhat node",
    "verify": "hardhat verify",
    "get-addresses": "hardhat run scripts/get-deployed-addresses.ts",
    "db:generate": "prisma generate --schema=src/database/schema.prisma",
    "db:push": "prisma db push --schema=src/database/schema.prisma",
    "db:migrate": "prisma migrate dev --schema=src/database/schema.prisma",
    "db:studio": "prisma studio --schema=src/database/schema.prisma",
    "db:seed": "tsx src/database/seed.ts",
    "db:seed-data": "tsx src/database/seed-data.ts",
    "db:seed-reference": "tsx src/database/seed-reference-data.ts",
    "db:seed-if-empty": "tsx src/database/seed-if-empty.ts",
    "db:backfill-industries": "tsx src/database/backfill-industry-ids.ts",
    "test": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "keywords": [
    "blockchain",
    "carbon-credits",
    "sustainability"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.1.0",
    "@types/bcrypt": "^6.0.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "ethers": "^6.15.0",
    "express": "^4.21.2",
    "express-validator": "^7.2.1",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.10.2",
    "prisma": "^6.1.0",
    "tsx": "^4.19.2",
    "typescript": "^5.8.0",
    "vitest": "^2.1.8"
  }
}